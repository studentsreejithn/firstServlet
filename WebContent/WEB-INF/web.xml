<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>firstServlet</display-name>
  
  <servlet>
  	<servlet-name>login</servlet-name>
  	<servlet-class>com.adaptor.LoginAdaptor</servlet-class>
  </servlet>
  
  <servlet-mapping>
  	<servlet-name>login</servlet-name>
  	<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>product</servlet-name>
  	<servlet-class>com.adaptor.ProductAdaptor</servlet-class>
  </servlet>
  
  <servlet-mapping>
 	<servlet-name>product</servlet-name>
 	<url-pattern>/listProduct</url-pattern>
 	<url-pattern>/createProduct</url-pattern>
 	<url-pattern>/updateProduct</url-pattern>
 	<url-pattern>/deleteProduct</url-pattern>
 	<url-pattern>/getProduct</url-pattern>
  </servlet-mapping>
  
</web-app>